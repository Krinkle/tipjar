{
	"manifest_version": 2,
	"name": "Tipjar - Support your favorite sites and creators",
	"short_name": "Tipjar",
	"version": "0.1",
	"author": "Corbin Davenport",
	"description": "Tipjar tells you when you can donate directly to your favorite sites.",
	"homepage_url": "https://github.com/corbindavenport",
	"permissions": [
		"tabs",
		"*://*/*",
		"storage"
	],
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"page_action": {
		"default_icon": {
			"32": "img/pageaction-greyscale-32.png",
			"64": "img/pageaction-greyscale-64.png"
		},
		"default_title": "Donate to this site"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"js/sites.js",
				"js/contentscript.js"
			],
			"run_at": "document_end"
		}
	],
	"icons": {
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	}
}